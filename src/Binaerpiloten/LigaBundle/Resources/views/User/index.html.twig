{% extends 'BinaerpilotenLigaBundle::base.html.twig' %}

{% block content %}
    <h1>User list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Vorname</th>
                <th>Nachname</th>
                <th>Lastlogin</th>
                <th>neues Spiel</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.username }}</a></td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.vorname }}</td>
                <td>{{ entity.nachname }}</td>
                <td>{% if entity.lastLogin %}{{ entity.lastLogin|date('d.m.Y') }}{% endif %}</td>
                <td><a href="{{ path('spiel_new', { 'name': entity.username }) }}">neu</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
