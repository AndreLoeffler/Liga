{% extends 'BinaerpilotenLigaBundle::base.html.twig' %}

{% block content %}
    <h1>Mission list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('mission_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                  <a href="{{ path('mission_show', { 'id': entity.id }) }}">show</a> - <a href="{{ path('mission_edit', { 'id': entity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('mission_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
