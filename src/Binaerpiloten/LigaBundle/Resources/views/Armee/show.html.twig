{% extends 'BinaerpilotenLigaBundle::base.html.twig' %}

{% block content %}
    <h1>Armee</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Beschreibung</th>
                <td>{{ entity.beschreibung }}</td>
            </tr>
            <tr>
                <th>Spieler</th>
                <td>{{ entity.user }}</td>
            </tr>
        </tbody>
    </table>

<ul class="record_actions">
    <li>
        <a href="{{ path('armee') }}">Back to the list</a>
    </li>
   	{% if entity.user.id == app.user.id %}
    <li>
        <a href="{{ path('armee_edit', { 'id': entity.id }) }}">Edit</a>
    </li>
    {% endif %}
</ul>
{% endblock %}
